<p class="notice">
  <%= notice %>
</p>

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<div class="container">
  <%= form_with model:@user, local:true do |f| %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-5 mx-auto">
      <h2>User info</h2>

      <div class="form-group">
        <label for="UserName">Name</label>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <label for="UserImage">Image</label>
        <%= f.attachment_field :profile_image, class: "form-control-file user-image"  %>
      </div>
      <div class="form-group">
        <label for="UserIntroduction">Introduction</label>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
  <% end %>
</div>